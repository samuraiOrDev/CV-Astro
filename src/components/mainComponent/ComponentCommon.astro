---
interface Props {
  date: string;
  title: string;
  description: string;
}
const { date, title, description } = Astro.props;
---

<div class="mt-[30px] flex gap-[40px]">
  <div class="w-1/3">
    <p class="font-bold">{date}</p>
  </div>
  <div class="w-2/3">
    <p class="text-[#233A5F] font-bold mb-3">{title}</p>
    <p class="text-[#878787] text-sm">{description}</p>
  </div>
</div>
